@model AirTickets_project.Ticket

@{
    ViewData["Title"] = "Создать билет";
}

<h1>Создать билет @ViewBag.TypeName</h1>

<h4>Билет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightsId" class="control-label"></label>
                <select asp-for="FlightsId" class ="form-control" asp-items="ViewBag.FlightsId"></select>
            </div>
            @*<input type ="hidden" value="@ViewBag.TypeId" name="TypeId" />*@
            <div class="form-group">
                <label asp-for="TypesId" class="control-label"></label>
                <select asp-for="TypesId" class="control-label" asp-items="ViewBag.Types"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientsId" class="control-label"></label>
                <select asp-for="ClientsId" class ="form-control" asp-items="ViewBag.ClientsId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

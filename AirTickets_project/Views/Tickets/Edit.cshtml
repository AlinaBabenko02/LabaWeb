@model AirTickets_project.Ticket

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Билет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketsId" />
            <div class="form-group">
                <label asp-for="FlightsId" class="control-label"></label>
                <select asp-for="FlightsId" class="form-control" asp-items="ViewBag.FlightsId"></select>
                <span asp-validation-for="FlightsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypesId" class="control-label"></label>
                <select asp-for="TypesId" class="form-control" asp-items="ViewBag.TypesId"></select>
                <span asp-validation-for="TypesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientsId" class="control-label"></label>
                <select asp-for="ClientsId" class="form-control" asp-items="ViewBag.ClientsId"></select>
                <span asp-validation-for="ClientsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model AirTickets_project.Flight

@{
    ViewData["Title"] = "Добавить рейс";
}

<h1>Добавить рейс</h1>

<h4>Рейс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanesId" class="control-label"></label>
                <select asp-for="PlanesId" class ="form-control" asp-items="ViewBag.PlanesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfDeparture" class="control-label"></label>
                <select asp-for="PlaceOfDeparture" class ="form-control" asp-items="ViewBag.PlaceOfDeparture"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfArrival" class="control-label"></label>
                <select asp-for="PlaceOfArrival" class ="form-control" asp-items="ViewBag.PlaceOfArrival"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightTime" class="control-label"></label>
                <input asp-for="FlightTime" class="form-control" />
                <span asp-validation-for="FlightTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
